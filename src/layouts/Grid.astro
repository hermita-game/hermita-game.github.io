---
import Hamburger from '../components/hamburger.svelte';
import Nav from './Nav.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="grid">
  <div class="hamburger">
    <Hamburger client:load />
    <div class="line"></div>
  </div>
  <div id="nav-title" class="title">
    {title.split("").map(letter => (
      <span>{letter}</span>
    ))}
  </div>
  <div class="sidebar">
    <Nav />
  </div>
  <div id="page-container">
    <div id="page-content">
      <slot />
    </div>
  </div>
</div>

<style>
  @font-face {
    font-family: "Pixels";
    src: url("/fonts/dogicapixel.ttf");
  }
  @font-face {
    font-family: 'Runes';
    src: url('/fonts/PixelRunes.ttf');
  }
  .grid {
    font-size: 0.7rem;
    --spacing: 5em;
    --line: solid 1px #c8c8c8;
    --runic: 'Runes';
    --normal: 'Pixels';
    position: relative;
    display: grid;
    grid-template-columns: 0 100%;
    grid-template-rows: var(--spacing) calc(100% - var(--spacing));
    width: 100%;
    height: 100%;
  }
  @media (min-width: 500px) {
    .grid {
      grid-template-columns: var(--spacing) calc(100% - var(--spacing));
      font-size: 1rem;
    }
    .hamburger {
      --size-menu: 3em!important;
    }
  }
  .hamburger {
    display: flex;
    align-items: center;
    justify-content: center;
    --size-menu: 2em;
    width: var(--spacing);
    z-index: 1;
    transition: border-color 500ms;
  }
  .line {
    position: absolute;
    top: 0;
    left: calc(var(--spacing) - 1px);
    height: var(--spacing);
    width: 0;
    box-sizing: content-box;
    border-left: var(--line);
    transition: height 500ms;
  }

  .title {
    display: flex;
    align-items: center;
    justify-content: right;
    font-size: 1.2em;
    padding: 0.5em;
    font-weight: 300;
    text-transform: uppercase;
    font-family: var(--normal);
  }
  .title :global(span) {
    width: 0.8em;
    display: inline-block;
    text-align: center;
  }
  .sidebar {
    border-right: var(--line);
    width: 100%;
    z-index: 1;
    background-color: var(--bg);
    transition: width 500ms;
  }

  #page-container {
    border-top: var(--line);
    padding: 1em;
    overflow: visible;
  }
  #page-content {
    height: 100%;
  }

  .grid:has(.wrapper-menu.open) .sidebar {
    width: min(100vw, 30rem);
  }
  .grid:has(.wrapper-menu.open) .line {
    height: 0;
  }
</style>
