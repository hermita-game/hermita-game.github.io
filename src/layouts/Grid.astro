---
import Hamburger from '../components/hamburger.svelte';
import Nav from './Nav.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="grid">
  <div class="hamburger">
    <Hamburger client:load />
  </div>
  <div class="title">
    {title.split("").map(letter => (
      <span>{letter}</span>
    ))}
  </div>
  <div class="sidebar">
    <Nav />
  </div>
  <div id="page-content">
    <slot />
  </div>
</div>

<style>
  @font-face {
    font-family: "BPD";
    src: url("/fonts/BPdotsUnicaseSquareBold.otf");
  }
  @font-face {
    font-family: 'Runes';
    src: url('/fonts/PixelRunes.ttf');
  }
  .grid {
    font-size: 0.7rem;
    --spacing: 5em;
    --line: solid 1px #c8c8c8;
    position: relative;
    display: grid;
    grid-template-columns: 0 100%;
    grid-template-rows: var(--spacing) calc(100% - var(--spacing));
    width: 100%;
    height: 100%;
  }
  @media (min-width: 500px) {
    .grid {
      grid-template-columns: var(--spacing) calc(100% - var(--spacing));
      font-size: 1rem;
    }
    .hamburger {
      --size-menu: 3em!important;
    }
  }
  .hamburger {
    border-right: var(--line);
    display: flex;
    align-items: center;
    justify-content: center;
    --size-menu: 2em;
    width: var(--spacing);
    z-index: 1;
    transition: border-color 500ms;
  }
  .title {
    font-size: 2em;
    text-align: right;
    padding: 0.5em;
    font-weight: 700;
    font-family: 'BPD';
  }
  .title span {
    width: 0.7em;
    display: inline-block;
  }
  .sidebar {
    border-right: var(--line);
    width: 100%;
    z-index: 1;
    background-color: var(--bg);
    transition: width 500ms;
  }
  #page-content {
    border-top: var(--line);
  }

  .grid:has(.wrapper-menu.open) .sidebar {
    width: min(100vw, 30rem);
  }
  .grid:has(.wrapper-menu.open) .hamburger {
    border-color: var(--bg);
  }
</style>
